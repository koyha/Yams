<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frameLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".InputDice">

    <!-- TODO: Update blank fragment layout -->

    <LinearLayout
        android:id="@+id/chosen_box"
        android:layout_width="1000px"
        android:layout_height="75dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/input_dice_box"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/chosen_box">

        <ImageButton
            android:id="@+id/dice_1"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:backgroundTint="#00FFFFFF"
            android:scaleX="0.95"
            android:scaleY="0.95"
            android:src="@drawable/dice_1"
            app:layout_constraintBottom_toTopOf="@+id/dice_4"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:src="@drawable/dice_1" />

        <ImageButton
            android:id="@+id/dice_2"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:backgroundTint="#00FFFFFF"
            android:scaleX="0.95"
            android:scaleY="0.95"
            android:src="@drawable/dice_2"
            app:layout_constraintBottom_toTopOf="@+id/dice_5"
            app:layout_constraintEnd_toStartOf="@+id/dice_3"
            app:layout_constraintStart_toEndOf="@+id/dice_1"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageButton
            android:id="@+id/dice_3"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:backgroundTint="#00FFFFFF"
            android:scaleX="0.95"
            android:scaleY="0.95"
            android:src="@drawable/dice_3"
            app:layout_constraintBottom_toTopOf="@+id/dice_6"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:src="@drawable/dice_3" />

        <ImageButton
            android:id="@+id/dice_4"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:backgroundTint="#00FFFFFF"
            android:scaleX="0.95"
            android:scaleY="0.95"
            android:src="@drawable/dice_4"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            tools:src="@drawable/dice_4" />

        <ImageButton
            android:id="@+id/dice_5"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:backgroundTint="#00FFFFFF"
            android:scaleX="0.95"
            android:scaleY="0.95"
            android:src="@drawable/dice_5"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/dice_6"
            app:layout_constraintStart_toEndOf="@+id/dice_4"
            tools:src="@drawable/dice_5" />

        <ImageButton
            android:id="@+id/dice_6"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:backgroundTint="#00FFFFFF"
            android:scaleX="0.95"
            android:scaleY="0.95"
            android:src="@drawable/dice_6"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            tools:src="@drawable/dice_6" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>